// remove interstitial on mobile
include interstitial


#storyArea.col-sm-12(ng-repeat="story in storyData.story")
  .maxphoto(align="center")
    .h_iframe(ng-if="story.video > ''", style="background-image:url('{{story.photourl}}'); background-size:cover")
      // a transparent image is preferable
      img.ratio(src='img/16x9.png')
      #playerDivStory(tube-player='{{story.video}}', align='center')
    div(ng-if="story.video == ''")
      img(ng-src="{{story.photourl}}")
  .container
    div
      h3#storyheadline.nomargin(story="headline" title="{{story.headline}}")
      br
      span.sideboard-date(story="pubDate")
    .social-icons
      a.arrow.titlestar(fav-button="{{storyData.story[0].headline}}") &#98734;
      // a.share-icon-story(hm-tap="theFunk()")
      #addThis(addThis, title="{{storyData.story[0].headline}}")
    div(style="clear: both")
    .author-and-date(ng-if="story.authorimg > ''")
      span.sideboard-authorimg(story="authorimg")
      span.sideboard-author(story="author")
    div
    p.storyp(story-test='story-test')
    .padmytop
      h4 Related Stories
      .related.fadeContainer(ng-repeat="related in storyData.related", id="related-{{$index}}")
        a(ng-href="{{related.link}}")
          img(ng-src="{{related.photothumb}}")
          span(related="headline")
      div(style="clear: both")
    #disqusdiv(dis-qus)
    .push &nbsp;


include mainad

